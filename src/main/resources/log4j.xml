<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">
<log4j:configuration>
    <appender name="all" class="org.apache.log4j.RollingFileAppender">
    	<param name="file" value="logs/couchdb-deploy.log"/>
	    <param name="MaxFileSize" value="1024KB"/>
		<param name="MaxBackupIndex" value="15"/>
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="%d{ABSOLUTE} %5p %c |%t|:\n %m%n"/>
            <!--
            <param name="ConversionPattern" value="%d{ABSOLUTE}
            %5p %c{1}:%L - %m%n"/>
            -->
        </layout>
    </appender>
    <appender name="monty" class="org.apache.log4j.RollingFileAppender">
    	<param name="file" value="logs/monty.log"/>
	    <param name="MaxFileSize" value="1024KB"/>
		<param name="MaxBackupIndex" value="15"/>
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="%d{ABSOLUTE} %5p %c |%t|:\n %m%n"/>
        </layout>
    </appender>
        
    <logger name="org.signaut">
       <level value="debug"/> 
    </logger>
     <root>
        <priority value="info">
        </priority>
        <appender-ref ref="all"/>
    </root>
 
</log4j:configuration>
